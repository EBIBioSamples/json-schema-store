{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "${schema_id}",
  "title": "${schema_title}",
  "description": "${schema_description}",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "accession": {
      "type": "string"
    },
    "characteristics": {
      "type": "object",
      "properties": {
      #foreach ($property in $properties)
        "$property.name()": {
          "type":"array",
          "minItems": 1,
          #if ($property.multiplicity()=="SINGLE")
            "maxItems":1,
          #end
          "items":{
            "properties": {
              "text": $property.type()

              #if ($property.units())
              ,
              "unit": {
                "enum": [
                  #foreach ($unit in $property.units())
                  "${unit}"#if( $foreach.hasNext ),#end
                  #end
                ]
              }
              #end
            },
            "required":["text"#if ($property.units()), "unit"#end]
          }
        }#if( $foreach.hasNext ),#end
      #end
      }
      #if($required.size() > 0)
        ,
        "allOf": [
        #foreach ($synonyms in $required)
          {
            "errorMessage": "Just one of the following properties must be specified: #foreach($synonym in $synonyms)'$synonym'#if($foreach.hasNext), #end#end",
            "oneOf": [
            #foreach ($synonym in $synonyms)
              {
                "required": [
                  "$synonym"
                ]
              }#if( $foreach.hasNext ),#end
            #end
            ]
          }#if( $foreach.hasNext ),#end
        #end
        ]
      #end
    }
  },
  "required": [
    "name",
    "characteristics"
  ]
}
